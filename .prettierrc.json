{
  "tabWidth": 4,
  "singleQuote": true,
  "htmlWhitespaceSensitivity": "css",
  "printWidth": 100,
  "overrides": [
    {
      "files": ["*.yaml", "*.yml"],
      "options": {
        "singleQuote": false,
        "tabWidth": 2
      }
    },
    { "files": "*.json", "options": { "tabWidth": 2 } }
  ]
}
